<h1>Subjects#index</h1>
<p>Find me in app/views/subjects/index.html.erb</p>

<%= link_to("add new subject", {:action=>'new'}, :class=>'action new') %>

<table class="listing" summary="Subject List">
	
	<tr class="header">
		
		<th style="padding: 10px" >Position</th>
		<th style="padding: 10px" >Subject</th>
		<th style="padding: 10px" >Visible</th>
		<th style="padding: 10px" >Pages</th>
		
	</tr>
	
	<% @subjects.each do |subject| %>
	
	<tr>
		
		<td> <%= subject.position %> </td>
		<td> <%= subject.name %> </td>
		<td class="center"> <%= subject.visible ? 'Yes' : 'No' %> </td>
		
		<td class="actions">
			
			<%= link_to("Show", {:action=>'show', :id=>subject.id}, :class=>'action show') %>
			<%= link_to("Update", {:action=>'update', :id=>subject.id}, :class=>'action update') %>
			<%= link_to("Delete", {:action=>'delete', :id=>subject.id}, :class=>'action delete') %>
			
		</td>
		
	</tr>
	
	<% end %>
	
</table>
